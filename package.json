{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css devserver"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acecera/Natours.git"
  },
  "author": "Ace",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/acecera/Natours/issues"
  },
  "homepage": "https://github.com/acecera/Natours#readme",
  "dependencies": {
    "lodash": "^4.17.15",
    "npm": "^6.14.5",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concat": "^1.0.3",
    "node-sass": "^7.0.0",
    "postcss-cli": "^7.1.1"
  }
}
